{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src", "src/*.ts"],
    "exclude": ["node_modules", "src/tests/*.ts"]
  }